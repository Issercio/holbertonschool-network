#!/usr/bin/env bash
# This script modifies /etc/hosts to change localhost to 127.0.2 and facebook.com to 8.8.8.8

# Check for root
if [[ "$EUID" -ne 0 ]]; then
  echo "Please run as root"
  exit 1
fi

# Backup /etc/hosts first
cp /etc/hosts /etc/hosts.bak

# Remove any existing localhost or facebook.com entries
sed -i '/localhost/d' /etc/hosts
sed -i '/facebook.com/d' /etc/hosts

# Add the required entries
echo "127.0.0.2 localhost" >> /etc/hosts
echo "8.8.8.8 facebook.com" >> /etc/hosts
